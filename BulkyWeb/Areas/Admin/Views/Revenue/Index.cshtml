@model BulkyBook.Models.ViewModels.RevenueViewModel

<div class="container mt-4">
    <h2 class="text-center">Revenue Report</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-secondary bg-gradient text-white">
                    <h4 class="text-center">As of @Model.Date.ToString("MM/dd/yyyy")</h4>
                </div>
                <div class="card-body text-center">
                    <h5>Total Revenue: @Model.TotalRevenue.ToString("C")</h5>
                    <h5>Total Orders: @Model.TotalOrders</h5>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <h3 class="text-center">Paid Orders</h3>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer Name</th>
                        <th>Order Date</th>
                        <th>Total Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.PaidOrders)
                    {
                        <tr>
                            <td>@order.Id</td>
                            <td>@order.ApplicationUser.Name</td> <!-- Hiển thị tên khách hàng từ ApplicationUser -->
                            <td>@order.OrderDate.ToString("MM/dd/yyyy")</td> <!-- Hiển thị ngày đặt hàng -->
                            <td>@order.OrderTotal.ToString("C")</td> <!-- Hiển thị tổng số tiền -->
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
